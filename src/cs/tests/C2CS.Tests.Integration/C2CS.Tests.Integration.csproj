<Project Sdk="Microsoft.NET.Sdk">

    <!-- MSBuild project settings -->
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Nullable>enable</Nullable>
        <IsPackable>false</IsPackable>
        <RootNamespace>C2CS.IntegrationTests</RootNamespace>
        <NoWarn>$(NoWarn);CA1707;CA2000;SA1300;IDE1006;CA1034;CA1051;CA1062;CA1724</NoWarn>
    </PropertyGroup>

    <!-- MSBuild.Tools project settings -->
    <PropertyGroup>
        <EnableCodeCoverage>false</EnableCodeCoverage>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.11.0" />
        <PackageReference Include="xunit" Version="2.4.1" />
        <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="coverlet.collector" Version="3.1.0">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\production\C2CS\C2CS.csproj" />
    </ItemGroup>
    
    <!-- Copy C code files-->
    <ItemGroup>
        <Content Include="my_c_library/c/**/*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="my_c_library/config*.json">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <!-- Dynamic link libraries -->
    <ItemGroup>
        <None Include="$(GitRepositoryPath)/lib/**/*.*">
            <LinkBase>%(RecursiveDir)</LinkBase>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Pack>false</Pack>
        </None>
    </ItemGroup>

</Project>
