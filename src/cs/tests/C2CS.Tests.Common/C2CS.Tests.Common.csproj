<Project Sdk="Microsoft.NET.Sdk">

    <!-- MSBuild project settings -->
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <!-- MSBuild.Tools project settings -->
    <PropertyGroup>
        <EnableCodeCoverage>false</EnableCodeCoverage>
    </PropertyGroup>

    <!-- NuGet package references -->
    <ItemGroup>
        <PackageReference Include="System.IO.Abstractions" Version="16.1.25" />
        <PackageReference Include="xunit.assert" Version="2.4.1" />
    </ItemGroup>

    <!-- Dynamic link libraries -->
    <ItemGroup>
        <None Include="$(GitRepositoryPath)/lib/**/*.*">
            <LinkBase>%(RecursiveDir)</LinkBase>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Pack>false</Pack>
        </None>
    </ItemGroup>

</Project>
