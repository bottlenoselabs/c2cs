<Project Sdk="Microsoft.NET.Sdk">

	<!-- MSBuild project settings -->
	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<NoWarn>$(NoWarn);CA1724</NoWarn>
		<RootNamespace>C2CS.WriteCodeCSharp</RootNamespace>
	</PropertyGroup>

	<!-- NuGet -->
	<PropertyGroup>
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<!-- Project references -->
	<ItemGroup>
	  <ProjectReference Include="../C2CS.Plugin/C2CS.Plugin.csproj" />
	  <ProjectReference Include="../C2CS.Runtime/C2CS.Runtime.csproj" />
	</ItemGroup>

	<!-- NuGet references -->
	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.2.0" />
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.2.0" />
		<PackageReference Include="Microsoft.CodeAnalysis.Workspaces.Common" Version="4.2.0" />
	</ItemGroup>

</Project>
