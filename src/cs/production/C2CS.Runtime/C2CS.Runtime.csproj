<Project Sdk="Microsoft.NET.Sdk">

    <!-- MSBuild project settings -->
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <RootNamespace>C2CS</RootNamespace>
    </PropertyGroup>
    
    <!-- My-MSBuild settings -->
    <PropertyGroup>
        <EnableCodeCoverage>false</EnableCodeCoverage>
    </PropertyGroup>

    <!-- NuGet -->
    <PropertyGroup>
        <IsPackable>true</IsPackable>
        <RepositoryUrl>https://github.com/bottlenoselabs/c2cs</RepositoryUrl>
        <PackageDescription>Minimal runtime library helper for C# code generated by C2CS.</PackageDescription>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <!-- NuGet packaage references -->
    <ItemGroup>
      <PackageReference Include="JetBrains.Annotations" Version="2021.2.0" />
    </ItemGroup>

</Project>
